<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ============================================ -->
    <!-- ESTILOS DEL PANEL DE ADMINISTRACIÓN -->
    <!-- Diseño profesional inspirado en la referencia -->
    <!-- ============================================ -->
    
    <!-- ═══════════════════════════════════════════ -->
    <!-- COLORES CORPORATIVOS ALLVA -->
    <!-- ═══════════════════════════════════════════ -->
    
    <Style Selector="Border.admin-background">
        <Setter Property="Background" Value="#FFD966"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════ -->
    <!-- SIDEBAR (Menu lateral izquierdo) -->
    <!-- ═══════════════════════════════════════════ -->
    
    <Style Selector="Border.admin-sidebar">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BoxShadow" Value="2 0 12 0 #15000000"/>
    </Style>
    
    <Style Selector="Border.admin-logo-container">
        <Setter Property="Padding" Value="20,30,20,20"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    
    <Style Selector="TextBlock.admin-logo-text">
        <Setter Property="Text" Value="Allva"/>
        <Setter Property="FontSize" Value="42"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#0b5394"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>
    
    <Style Selector="Border.admin-menu-separator">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="#E5E5E5"/>
        <Setter Property="Margin" Value="15,10,15,15"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════ -->
    <!-- ITEMS DEL MENU SIDEBAR -->
    <!-- ═══════════════════════════════════════════ -->
    
    <Style Selector="Button.admin-menu-item">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="20,14"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="CornerRadius" Value="0"/>
    </Style>
    
    <Style Selector="Button.admin-menu-item /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    <Style Selector="Button.admin-menu-item:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#FFD966"/>
    </Style>
    
    <Style Selector="Button.admin-menu-item.active">
        <Setter Property="Background" Value="#FFD966"/>
    </Style>
    
    <Style Selector="Button.admin-menu-item.active /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#FFD966"/>
    </Style>
    
    <Style Selector="TextBlock.admin-menu-text">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Foreground" Value="#2C2C2C"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════ -->
    <!-- CONTENIDO PRINCIPAL -->
    <!-- ═══════════════════════════════════════════ -->
    
    <Style Selector="Border.admin-content-panel">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Margin" Value="25"/>
        <Setter Property="BoxShadow" Value="0 4 16 0 #15000000"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════ -->
    <!-- PANEL DE FILTROS LATERAL -->
    <!-- ═══════════════════════════════════════════ -->
    
    <Style Selector="Border.admin-filters-panel">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
        <Setter Property="BorderBrush" Value="#E5E5E5"/>
    </Style>
    
    <Style Selector="TextBlock.admin-filters-title">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#2C2C2C"/>
        <Setter Property="Margin" Value="0,0,0,15"/>
    </Style>
    
    <Style Selector="TextBlock.admin-filter-label">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="#2C2C2C"/>
        <Setter Property="Margin" Value="0,0,0,6"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════ -->
    <!-- HEADER DEL MÓDULO (Azul oscuro) -->
    <!-- ═══════════════════════════════════════════ -->
    
    <Style Selector="Border.admin-module-header">
        <Setter Property="Background" Value="#0b5394"/>
        <Setter Property="Padding" Value="30,20"/>
        <Setter Property="CornerRadius" Value="16,16,0,0"/>
    </Style>
    
    <Style Selector="TextBlock.admin-module-title">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════ -->
    <!-- TABLA DE DATOS (Header amarillo) -->
    <!-- ═══════════════════════════════════════════ -->
    
    <Style Selector="Border.admin-table-header">
        <Setter Property="Background" Value="#FFD966"/>
        <Setter Property="Padding" Value="15,12"/>
    </Style>
    
    <Style Selector="TextBlock.admin-table-header-text">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#2C2C2C"/>
    </Style>
    
    <Style Selector="Border.admin-table-row">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Padding" Value="15,12"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="BorderBrush" Value="#F0F0F0"/>
    </Style>
    
    <Style Selector="Border.admin-table-row:pointerover">
        <Setter Property="Background" Value="#FFFDF5"/>
    </Style>
    
    <Style Selector="TextBlock.admin-table-cell">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#2C2C2C"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════ -->
    <!-- BOTONES DEL SISTEMA -->
    <!-- ═══════════════════════════════════════════ -->
    
    <Style Selector="Button.admin-btn-yellow">
        <Setter Property="Background" Value="#FFD966"/>
        <Setter Property="Foreground" Value="#2C2C2C"/>
        <Setter Property="Padding" Value="18,10"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <Style Selector="Button.admin-btn-yellow /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#FFD966"/>
    </Style>
    
    <Style Selector="Button.admin-btn-yellow:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#FFC933"/>
    </Style>
    
    <Style Selector="Button.admin-btn-blue">
        <Setter Property="Background" Value="#0b5394"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="18,10"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <Style Selector="Button.admin-btn-blue /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#0b5394"/>
    </Style>
    
    <Style Selector="Button.admin-btn-blue:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#084171"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════ -->
    <!-- INPUTS Y CAMPOS DE FORMULARIO -->
    <!-- ═══════════════════════════════════════════ -->
    
    <Style Selector="TextBox.admin-input">
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#D0D0D0"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>
    
    <Style Selector="TextBox.admin-input:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="#0b5394"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>
    
    <Style Selector="ComboBox.admin-combo">
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#D0D0D0"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>
    
    <Style Selector="DatePicker.admin-date">
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#D0D0D0"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>
    
    <!-- ═══════════════════════════════════════════ -->
    <!-- SCROLLBARS PERSONALIZADOS -->
    <!-- ═══════════════════════════════════════════ -->
    
    <Style Selector="ScrollBar">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    <Style Selector="ScrollBar:vertical">
        <Setter Property="Width" Value="10"/>
    </Style>
    
    <Style Selector="ScrollBar:horizontal">
        <Setter Property="Height" Value="10"/>
    </Style>
    
    <Style Selector="ScrollBar /template/ RepeatButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <Style Selector="ScrollBar /template/ Thumb">
        <Setter Property="Background" Value="#C0C0C0"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>
    
    <Style Selector="ScrollBar /template/ Thumb:pointerover">
        <Setter Property="Background" Value="#A0A0A0"/>
    </Style>

</Styles>
