<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Allva.Desktop.ViewModels.Admin"
             xmlns:converters="using:Allva.Desktop.Converters"
             mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
             x:Class="Allva.Desktop.Views.Admin.ManageComerciosView"
             x:DataType="vm:ManageComerciosViewModel">

    <UserControl.Styles>
        <!-- Estilo para botón primario -->
        <Style Selector="Button.btn-primary">
            <Setter Property="Background" Value="#003366"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.btn-primary:pointerover">
            <Setter Property="Background" Value="#0b5394"/>
        </Style>

        <!-- Estilo para botón secundario -->
        <Style Selector="Button.btn-secondary">
            <Setter Property="Background" Value="#6c757d"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Estilo para botones de acción -->
        <Style Selector="Button.btn-action">
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="Foreground" Value="#003366"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#dee2e6"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
        <Style Selector="Button.btn-action:pointerover">
            <Setter Property="Background" Value="#e9ecef"/>
        </Style>

        <!-- Estilo para botón eliminar -->
        <Style Selector="Button.btn-danger">
            <Setter Property="Background" Value="#dc3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Estilo para tarjetas de comercio -->
        <Style Selector="Border.comercio-card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#e0e0e0"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Border.comercio-card:pointerover">
            <Setter Property="BoxShadow" Value="0 4 12 0 #15000000"/>
        </Style>

        <!-- Estilos para TextBox y ComboBox -->
        <Style Selector="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ced4da"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ced4da"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ============================================ -->
        <!-- HEADER CON ESTADÍSTICAS Y BOTÓN NUEVO -->
        <!-- ============================================ -->
        <Border Grid.Row="0" Background="White" 
                BorderThickness="0,0,0,1" BorderBrush="#e0e0e0"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Estadísticas -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="48">
                    <StackPanel Spacing="6">
                        <TextBlock Text="TOTAL COMERCIOS" 
                                   FontSize="14" FontWeight="Bold" 
                                   Foreground="#666" LetterSpacing="0.5"/>
                        <TextBlock Text="{Binding TotalComercios}" 
                                   FontSize="42" FontWeight="Bold" 
                                   Foreground="#003366"/>
                    </StackPanel>

                    <StackPanel Spacing="6">
                        <TextBlock Text="TOTAL LOCALES" 
                                   FontSize="14" FontWeight="Bold" 
                                   Foreground="#666" LetterSpacing="0.5"/>
                        <TextBlock Text="{Binding TotalLocales}" 
                                   FontSize="42" FontWeight="Bold" 
                                   Foreground="#FFC600"/>
                    </StackPanel>
                </StackPanel>

                <!-- Botón Nuevo Comercio -->
                <Button Grid.Column="1" 
                        Classes="btn-primary"
                        Command="{Binding MostrarFormularioComercioCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="+" FontSize="24" FontWeight="Bold"/>
                        <TextBlock Text="NUEVO COMERCIO" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- ============================================ -->
        <!-- CONTENIDO PRINCIPAL -->
        <!-- ============================================ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- ============================================ -->
            <!-- ÁREA DE FILTROS Y LISTA -->
            <!-- ============================================ -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="32,24" Spacing="24">
                    
                    <!-- BARRA DE FILTROS EN UNA SOLA LÍNEA -->
                    <Border Background="White" 
                            BorderThickness="1" BorderBrush="#e0e0e0"
                            CornerRadius="10" Padding="24">
                        <StackPanel Spacing="16">
                            
                            <!-- Título de la sección -->
                            <TextBlock Text="FILTROS DE BÚSQUEDA" 
                                       FontSize="16" FontWeight="Bold" 
                                       Foreground="#003366"
                                       LetterSpacing="0.5"/>
                            
                            <!-- Una sola fila con todos los filtros -->
                            <Grid ColumnDefinitions="3*,*,*,*,Auto,Auto">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- COLUMNA 0: Campo de búsqueda principal -->
                                <TextBox Grid.Row="1" Grid.Column="0" 
                                         Text="{Binding FiltroBusqueda}"
                                         Watermark="Buscar por nombre de comercio, local, código, email, teléfono, dirección..."
                                         FontSize="16"
                                         Margin="0,0,12,0"/>

                                <!-- COLUMNA 1: Tipo de búsqueda -->
                                <TextBlock Grid.Row="0" Grid.Column="1"
                                           Text="Tipo de búsqueda"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="#666"
                                           Margin="0,0,12,6"/>
                                <ComboBox Grid.Row="1" Grid.Column="1"
                                          SelectedIndex="0"
                                          FontSize="16"
                                          Margin="0,0,12,0">
                                    <ComboBoxItem Content="Todos" FontSize="16"/>
                                    <ComboBoxItem Content="Por Comercio" FontSize="16"/>
                                    <ComboBoxItem Content="Por Local" FontSize="16"/>
                                    <ComboBoxItem Content="Por Código" FontSize="16"/>
                                </ComboBox>

                                <!-- COLUMNA 2: País -->
                                <TextBlock Grid.Row="0" Grid.Column="2"
                                           Text="País"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="#666"
                                           Margin="0,0,12,6"/>
                                <TextBox Grid.Row="1" Grid.Column="2"
                                         Text="{Binding FiltroPais}"
                                         Watermark="País..."
                                         FontSize="16"
                                         Margin="0,0,12,0"/>

                                <!-- COLUMNA 3: Módulo -->
                                <TextBlock Grid.Row="0" Grid.Column="3"
                                           Text="Módulo"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="#666"
                                           Margin="0,0,12,6"/>
                                <ComboBox Grid.Row="1" Grid.Column="3"
                                          SelectedItem="{Binding FiltroModulo}"
                                          ItemsSource="{Binding ModulosDisponibles}"
                                          FontSize="16"
                                          Margin="0,0,12,0">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" FontSize="16"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <!-- COLUMNA 4: Botón Buscar -->
                                <Button Grid.Row="1" Grid.Column="4" 
                                        Classes="btn-primary"
                                        Command="{Binding AplicarFiltrosCommand}"
                                        Margin="0,0,8,0">
                                    <TextBlock Text="BUSCAR" FontSize="14" FontWeight="Bold"/>
                                </Button>

                                <!-- COLUMNA 5: Botón Limpiar -->
                                <Button Grid.Row="1" Grid.Column="5" 
                                        Classes="btn-secondary"
                                        Command="{Binding LimpiarFiltrosCommand}">
                                    <TextBlock Text="LIMPIAR TODO" FontSize="14" FontWeight="Bold"/>
                                </Button>
                            </Grid>

                            <!-- Información de resultados -->
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <TextBlock FontSize="14" Foreground="#666">
                                    <Run Text="Mostrando"/>
                                    <Run Text="{Binding ComerciosFiltrados.Count}" FontWeight="Bold" Foreground="#003366"/>
                                    <Run Text="de"/>
                                    <Run Text="{Binding Comercios.Count}" FontWeight="Bold" Foreground="#003366"/>
                                    <Run Text="comercios"/>
                                </TextBlock>
                            </StackPanel>

                        </StackPanel>
                    </Border>

                    <!-- LISTA DE COMERCIOS -->
                    <ItemsControl ItemsSource="{Binding ComerciosFiltrados}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Classes="comercio-card">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Información del comercio -->
                                        <StackPanel Grid.Column="0" Spacing="12">
                                            <TextBlock Text="{Binding NombreComercio}" 
                                                       FontSize="24" FontWeight="Bold" 
                                                       Foreground="#003366"/>
                                            <StackPanel Orientation="Horizontal" Spacing="24">
                                                <TextBlock FontSize="16" Foreground="#666">
                                                    <Run Text="Teléfono:"/>
                                                    <Run Text="{Binding NumeroContacto}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="16" Foreground="#666">
                                                    <Run Text="Email:"/>
                                                    <Run Text="{Binding MailContacto}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="16" Foreground="#666">
                                                    <Run Text="País:"/>
                                                    <Run Text="{Binding Pais}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- Badges informativos -->
                                            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                                                <Border Background="#e3f2fd" 
                                                        CornerRadius="6" Padding="12,6">
                                                    <TextBlock FontSize="15" FontWeight="SemiBold" Foreground="#0b5394">
                                                        <Run Text="{Binding CantidadLocales}"/>
                                                        <Run Text="Locales"/>
                                                    </TextBlock>
                                                </Border>
                                                <Border Background="#e8f5e9" 
                                                        CornerRadius="6" Padding="12,6">
                                                    <TextBlock FontSize="15" FontWeight="SemiBold" Foreground="#28a745">
                                                        <Run Text="{Binding TotalUsuarios}"/>
                                                        <Run Text="Empleados"/>
                                                    </TextBlock>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Botones de acción -->
                                        <StackPanel Grid.Column="1" 
                                                    Orientation="Horizontal" 
                                                    Spacing="10"
                                                    VerticalAlignment="Top">
                                            <Button Classes="btn-action"
                                                    Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).VerDetallesComercioCommand}"
                                                    CommandParameter="{Binding}">
                                                <TextBlock Text="VER DETALLES" FontSize="13" FontWeight="Bold"/>
                                            </Button>
                                            <Button Classes="btn-action"
                                                    Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).EditarComercioCommand}"
                                                    CommandParameter="{Binding}">
                                                <TextBlock Text="EDITAR" FontSize="13" FontWeight="Bold"/>
                                            </Button>
                                            <Button Classes="btn-danger"
                                                    Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).EliminarComercioCommand}"
                                                    CommandParameter="{Binding}">
                                                <TextBlock Text="ELIMINAR" FontSize="13" FontWeight="Bold"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Mensaje cuando no hay comercios -->
                    <Border IsVisible="{Binding !ComerciosFiltrados.Count}"
                            Background="#f8f9fa"
                            BorderThickness="1" BorderBrush="#e0e0e0"
                            CornerRadius="10"
                            Padding="48"
                            MinHeight="300">
                        <StackPanel Spacing="16" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                            <TextBlock Text="NO HAY COMERCIOS REGISTRADOS" 
                                       FontSize="22" FontWeight="Bold" 
                                       Foreground="#999"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Haz clic en NUEVO COMERCIO para agregar el primer comercio" 
                                       FontSize="17" Foreground="#999" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- ============================================ -->
            <!-- PANEL LATERAL DERECHO DESLIZANTE -->
            <!-- ============================================ -->
            <Border Grid.Column="1" 
                    Width="600"
                    Background="White"
                    BorderThickness="1,0,0,0"
                    BorderBrush="#e0e0e0"
                    IsVisible="{Binding MostrarPanelDerecho}">
                
                <Grid RowDefinitions="Auto,*,Auto">
                    
                    <!-- Header del Panel -->
                    <Border Grid.Row="0" 
                            Background="#003366" 
                            Padding="24,20">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0"
                                       Text="{Binding TituloPanelDerecho}" 
                                       FontSize="20" FontWeight="Bold" 
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                            <Button Grid.Column="1"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding CerrarPanelDerechoCommand}"
                                    Cursor="Hand">
                                <TextBlock Text="✕" FontSize="26" Foreground="White"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Contenido dinámico del panel -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="24" Spacing="24">
                            
                            <!-- DETALLES DEL COMERCIO -->
                            <Border IsVisible="{Binding !MostrarFormulario}"
                                    Background="#f8f9fa"
                                    BorderThickness="1" BorderBrush="#e0e0e0"
                                    CornerRadius="10"
                                    Padding="20">
                                <StackPanel Spacing="16">
                                    <TextBlock Text="INFORMACIÓN DEL COMERCIO" 
                                               FontSize="18" FontWeight="Bold" 
                                               Foreground="#003366"
                                               LetterSpacing="0.5"/>
                                    
                                    <!-- Datos básicos -->
                                    <StackPanel Spacing="12">
                                        <StackPanel>
                                            <TextBlock Text="Nombre comercial" FontSize="14" Foreground="#666" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding ComercioSeleccionado.NombreComercio}" FontSize="17" Foreground="#333" Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <StackPanel>
                                            <TextBlock Text="Dirección central" FontSize="14" Foreground="#666" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding ComercioSeleccionado.DireccionCentral}" FontSize="17" Foreground="#333" Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <Grid ColumnDefinitions="*,*">
                                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                <TextBlock Text="Teléfono" FontSize="14" Foreground="#666" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding ComercioSeleccionado.NumeroContacto}" FontSize="17" Foreground="#333" Margin="0,4,0,0"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                <TextBlock Text="País" FontSize="14" Foreground="#666" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding ComercioSeleccionado.Pais}" FontSize="17" Foreground="#333" Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </Grid>

                                        <StackPanel>
                                            <TextBlock Text="Email" FontSize="14" Foreground="#666" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding ComercioSeleccionado.MailContacto}" FontSize="17" Foreground="#333" Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <StackPanel IsVisible="{Binding ComercioSeleccionado.Observaciones, Converter={StaticResource NotEmptyConverter}}">
                                            <TextBlock Text="Observaciones" FontSize="14" Foreground="#666" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding ComercioSeleccionado.Observaciones}" FontSize="17" Foreground="#333" Margin="0,4,0,0" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- ARCHIVOS SUBIDOS -->
                            <Border IsVisible="{Binding !MostrarFormulario}"
                                    Background="#fff3cd"
                                    BorderThickness="1" BorderBrush="#ffc107"
                                    CornerRadius="10"
                                    Padding="20">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="ARCHIVOS ADJUNTOS" 
                                               FontSize="18" FontWeight="Bold" 
                                               Foreground="#856404"
                                               LetterSpacing="0.5"/>
                                    
                                    <!-- Lista de archivos -->
                                    <ItemsControl ItemsSource="{Binding ArchivosComercioSeleccionado}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="White" 
                                                        BorderBrush="#ffc107" BorderThickness="1"
                                                        CornerRadius="6" 
                                                        Padding="12" 
                                                        Margin="0,0,0,8">
                                                    <Grid ColumnDefinitions="*,Auto">
                                                        <TextBlock Grid.Column="0" Text="{Binding NombreArchivo}" FontSize="16" VerticalAlignment="Center"/>
                                                        <Button Grid.Column="1" 
                                                                Background="Transparent" 
                                                                BorderThickness="0"
                                                                Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).DescargarArchivoCommand}"
                                                                CommandParameter="{Binding}">
                                                            <TextBlock Text="Descargar" FontSize="16" Foreground="#856404" FontWeight="SemiBold"/>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Mensaje sin archivos -->
                                    <TextBlock IsVisible="{Binding !ArchivosComercioSeleccionado.Count}"
                                               Text="No hay archivos adjuntos"
                                               FontSize="16"
                                               Foreground="#856404"
                                               FontStyle="Italic"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- LOCALES DEL COMERCIO CON DETALLES -->
                            <Border IsVisible="{Binding !MostrarFormulario}"
                                    Background="#e3f2fd"
                                    BorderThickness="1" BorderBrush="#0b5394"
                                    CornerRadius="10"
                                    Padding="20">
                                <StackPanel Spacing="16">
                                    <TextBlock Text="LOCALES Y PERMISOS" 
                                               FontSize="18" FontWeight="Bold" 
                                               Foreground="#0b5394"
                                               LetterSpacing="0.5"/>
                                    
                                    <!-- Lista de locales con todos sus detalles -->
                                    <ItemsControl ItemsSource="{Binding ComercioSeleccionado.Locales}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="White" 
                                                        BorderBrush="#0b5394" BorderThickness="1"
                                                        CornerRadius="8" 
                                                        Padding="16" 
                                                        Margin="0,0,0,12">
                                                    <StackPanel Spacing="12">
                                                        
                                                        <!-- Header: Solo código y controles -->
                                                        <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                                                            <Border Grid.Column="0" 
                                                                    Background="#003366" 
                                                                    CornerRadius="6" 
                                                                    Padding="12,6"
                                                                    Margin="0,0,12,0">
                                                                <TextBlock Text="{Binding CodigoLocal}" 
                                                                           FontSize="16" FontWeight="Bold" 
                                                                           Foreground="White"/>
                                                            </Border>
                                                            
                                                            <!-- Botón Expandir/Contraer -->
                                                            <Button Grid.Column="2"
                                                                    Background="Transparent"
                                                                    BorderThickness="0"
                                                                    Padding="8"
                                                                    Margin="0,0,8,0"
                                                                    Cursor="Hand"
                                                                    Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).ToggleLocalDetallesCommand}"
                                                                    CommandParameter="{Binding}">
                                                                <TextBlock Text="{Binding MostrarDetalles, Converter={StaticResource BoolToExpandIconConverter}}" 
                                                                           FontSize="20" 
                                                                           Foreground="#003366"/>
                                                            </Button>
                                                            
                                                            <!-- Badge de estado -->
                                                            <Button Grid.Column="3"
                                                                    Background="{Binding Activo, Converter={StaticResource EstadoActivoColorConverter}}"
                                                                    Foreground="White"
                                                                    FontWeight="Bold"
                                                                    FontSize="12"
                                                                    Padding="12,6"
                                                                    BorderThickness="0"
                                                                    CornerRadius="6"
                                                                    Cursor="Hand"
                                                                    Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).CambiarEstadoLocalDetalleCommand}"
                                                                    CommandParameter="{Binding}">
                                                                <TextBlock Text="{Binding Activo, Converter={StaticResource EstadoTextoMayusculaConverter}}" 
                                                                           FontSize="12" FontWeight="Bold"/>
                                                            </Button>
                                                        </Grid>

                                                        <!-- Detalles expandibles del local -->
                                                        <StackPanel IsVisible="{Binding MostrarDetalles}" Spacing="12">
                                                            
                                                            <!-- País y Código Postal -->
                                                            <Grid ColumnDefinitions="*,*">
                                                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                                    <TextBlock Text="País" FontSize="13" Foreground="#666" FontWeight="SemiBold"/>
                                                                    <TextBlock Text="{Binding Pais}" FontSize="16" Foreground="#333" Margin="0,4,0,0"/>
                                                                </StackPanel>
                                                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                                    <TextBlock Text="Código Postal" FontSize="13" Foreground="#666" FontWeight="SemiBold"/>
                                                                    <TextBlock Text="{Binding CodigoPostal}" FontSize="16" Foreground="#333" Margin="0,4,0,0"/>
                                                                </StackPanel>
                                                            </Grid>

                                                            <!-- Tipo de vía -->
                                                            <StackPanel>
                                                                <TextBlock Text="Tipo de vía" FontSize="13" Foreground="#666" FontWeight="SemiBold"/>
                                                                <TextBlock Text="{Binding TipoVia}" FontSize="16" Foreground="#333" Margin="0,4,0,0"/>
                                                            </StackPanel>

                                                            <!-- Calle/Dirección -->
                                                            <StackPanel>
                                                                <TextBlock Text="Calle" FontSize="13" Foreground="#666" FontWeight="SemiBold"/>
                                                                <TextBlock Text="{Binding Direccion}" FontSize="16" Foreground="#333" Margin="0,4,0,0"/>
                                                            </StackPanel>

                                                            <!-- Número, Escalera y Piso -->
                                                            <Grid ColumnDefinitions="*,*,*">
                                                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                                    <TextBlock Text="Número" FontSize="13" Foreground="#666" FontWeight="SemiBold"/>
                                                                    <TextBlock Text="{Binding LocalNumero}" FontSize="16" Foreground="#333" Margin="0,4,0,0"/>
                                                                </StackPanel>
                                                                <StackPanel Grid.Column="1" Margin="4,0,4,0">
                                                                    <TextBlock Text="Escalera" FontSize="13" Foreground="#666" FontWeight="SemiBold"/>
                                                                    <TextBlock Text="{Binding Escalera}" FontSize="16" Foreground="#333" Margin="0,4,0,0"/>
                                                                </StackPanel>
                                                                <StackPanel Grid.Column="2" Margin="8,0,0,0">
                                                                    <TextBlock Text="Piso" FontSize="13" Foreground="#666" FontWeight="SemiBold"/>
                                                                    <TextBlock Text="{Binding Piso}" FontSize="16" Foreground="#333" Margin="0,4,0,0"/>
                                                                </StackPanel>
                                                            </Grid>

                                                            <!-- Contacto -->
                                                            <Grid ColumnDefinitions="*,*">
                                                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                                    <TextBlock Text="Teléfono" FontSize="13" Foreground="#666" FontWeight="SemiBold"/>
                                                                    <TextBlock Text="{Binding Telefono}" FontSize="16" Foreground="#333" Margin="0,4,0,0"/>
                                                                </StackPanel>
                                                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                                    <TextBlock Text="Email" FontSize="13" Foreground="#666" FontWeight="SemiBold"/>
                                                                    <TextBlock Text="{Binding Email}" FontSize="16" Foreground="#333" Margin="0,4,0,0"/>
                                                                </StackPanel>
                                                            </Grid>

                                                            <!-- Usuarios en el local - CON CANTIDADES -->
                                                            <StackPanel>
                                                                <TextBlock Text="Usuarios en este local" FontSize="13" Foreground="#666" FontWeight="SemiBold"/>
                                                                <Grid ColumnDefinitions="*,*" Margin="0,4,0,0">
                                                                    <Border Grid.Column="0" Background="#e3f2fd" CornerRadius="4" Padding="12,6" Margin="0,0,4,0">
                                                                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                                                            <TextBlock FontSize="18" FontWeight="Bold" Foreground="#003366" VerticalAlignment="Center">
                                                                                <Run Text="{Binding CantidadUsuariosFijos}"/>
                                                                            </TextBlock>
                                                                            <TextBlock Text="Fijos" FontSize="14" Foreground="#666" VerticalAlignment="Center"/>
                                                                        </StackPanel>
                                                                    </Border>
                                                                    <Border Grid.Column="1" Background="#fff3cd" CornerRadius="4" Padding="12,6" Margin="4,0,0,0">
                                                                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                                                            <TextBlock FontSize="18" FontWeight="Bold" Foreground="#856404" VerticalAlignment="Center">
                                                                                <Run Text="{Binding CantidadUsuariosFlooter}"/>
                                                                            </TextBlock>
                                                                            <TextBlock Text="Flooter" FontSize="14" Foreground="#666" VerticalAlignment="Center"/>
                                                                        </StackPanel>
                                                                    </Border>
                                                                </Grid>
                                                            </StackPanel>

                                                            <!-- Módulos activos -->
                                                            <StackPanel>
                                                                <TextBlock Text="Módulos habilitados" FontSize="13" Foreground="#666" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                                    <Border Background="#ffc107" 
                                                                            CornerRadius="4" Padding="8,4"
                                                                            IsVisible="{Binding ModuloDivisas}">
                                                                        <TextBlock Text="DIVISAS" 
                                                                                   FontSize="11" FontWeight="Bold" 
                                                                                   Foreground="White"/>
                                                                    </Border>
                                                                    <Border Background="#28a745" 
                                                                            CornerRadius="4" Padding="8,4"
                                                                            IsVisible="{Binding ModuloPackAlimentos}">
                                                                        <TextBlock Text="ALIMENTOS" 
                                                                                   FontSize="11" FontWeight="Bold" 
                                                                                   Foreground="White"/>
                                                                    </Border>
                                                                    <Border Background="#007bff" 
                                                                            CornerRadius="4" Padding="8,4"
                                                                            IsVisible="{Binding ModuloBilletesAvion}">
                                                                        <TextBlock Text="BILLETES" 
                                                                                   FontSize="11" FontWeight="Bold" 
                                                                                   Foreground="White"/>
                                                                    </Border>
                                                                    <Border Background="#6f42c1" 
                                                                            CornerRadius="4" Padding="8,4"
                                                                            IsVisible="{Binding ModuloPackViajes}">
                                                                        <TextBlock Text="VIAJES" 
                                                                                   FontSize="11" FontWeight="Bold" 
                                                                                   Foreground="White"/>
                                                                    </Border>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </StackPanel>

                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Mensaje sin locales -->
                                    <TextBlock IsVisible="{Binding !ComercioSeleccionado.Locales.Count}"
                                               Text="Este comercio no tiene locales asignados"
                                               FontSize="16"
                                               Foreground="#0b5394"
                                               FontStyle="Italic"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- FORMULARIO DE CREACIÓN/EDICIÓN -->
                            <StackPanel IsVisible="{Binding MostrarFormulario}" Spacing="20">
                                
                                <!-- DATOS DEL COMERCIO -->
                                <Border Background="#f8f9fa" 
                                        BorderThickness="1" BorderBrush="#dee2e6"
                                        CornerRadius="10" 
                                        Padding="20">
                                    <StackPanel Spacing="16">
                                        <TextBlock Text="DATOS DEL COMERCIO" 
                                                   FontSize="18" FontWeight="Bold" 
                                                   Foreground="#003366"
                                                   LetterSpacing="0.5"/>

                                        <StackPanel>
                                            <TextBlock Text="Nombre comercial *" 
                                                       FontSize="15" FontWeight="SemiBold" 
                                                       Margin="0,0,0,8"/>
                                            <TextBox Text="{Binding FormNombreComercio}" 
                                                     Watermark="Nombre del negocio..."
                                                     FontSize="17"/>
                                        </StackPanel>

                                        <Grid ColumnDefinitions="*,*">
                                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                <TextBlock Text="País" 
                                                           FontSize="15" FontWeight="SemiBold" 
                                                           Margin="0,0,0,8"/>
                                                <TextBox Text="{Binding FormPais}" 
                                                         Watermark="España"
                                                         FontSize="17"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                <TextBlock Text="Teléfono" 
                                                           FontSize="15" FontWeight="SemiBold" 
                                                           Margin="0,0,0,8"/>
                                                <TextBox Text="{Binding FormNumeroContacto}" 
                                                         Watermark="+34 XXX XXX XXX"
                                                         FontSize="17"/>
                                            </StackPanel>
                                        </Grid>

                                        <StackPanel>
                                            <TextBlock Text="Email de contacto *" 
                                                       FontSize="15" FontWeight="SemiBold" 
                                                       Margin="0,0,0,8"/>
                                            <TextBox Text="{Binding FormMailContacto}" 
                                                     Watermark="contacto@empresa.com"
                                                     FontSize="17"/>
                                        </StackPanel>

                                        <StackPanel>
                                            <TextBlock Text="Dirección central" 
                                                       FontSize="15" FontWeight="SemiBold" 
                                                       Margin="0,0,0,8"/>
                                            <TextBox Text="{Binding FormDireccionCentral}" 
                                                     Watermark="Calle, número, ciudad..."
                                                     FontSize="17"/>
                                        </StackPanel>

                                        <StackPanel>
                                            <TextBlock Text="Observaciones" 
                                                       FontSize="15" FontWeight="SemiBold" 
                                                       Margin="0,0,0,8"/>
                                            <TextBox Text="{Binding FormObservaciones}" 
                                                     Watermark="Notas adicionales sobre el comercio..."
                                                     AcceptsReturn="True"
                                                     Height="100"
                                                     TextWrapping="Wrap"
                                                     FontSize="17"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- OFICINAS / LOCALES -->
                                <Border Background="#e3f2fd" 
                                        CornerRadius="10" 
                                        Padding="24">
                                    <StackPanel Spacing="20">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0"
                                                       Text="OFICINAS / LOCALES" 
                                                       FontSize="18" FontWeight="Bold" 
                                                       Foreground="#0b5394"
                                                       LetterSpacing="0.5"
                                                       VerticalAlignment="Center"/>
                                            
                                            <Button Grid.Column="1"
                                                    Classes="btn-primary"
                                                    Command="{Binding AgregarLocalCommand}">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="+" FontSize="20" FontWeight="Bold"/>
                                                    <TextBlock Text="AÑADIR LOCAL" FontSize="14" FontWeight="Bold"/>
                                                </StackPanel>
                                            </Button>
                                        </Grid>

                                        <!-- Lista de locales para editar -->
                                        <ItemsControl ItemsSource="{Binding LocalesComercio}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="White" 
                                                            BorderThickness="1" BorderBrush="#0b5394"
                                                            CornerRadius="8" 
                                                            Padding="16"
                                                            Margin="0,0,0,16">
                                                        <StackPanel Spacing="16">
                                                            
                                                            <!-- Header: Código y botón eliminar -->
                                                            <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                                                                <Border Grid.Column="0" 
                                                                        Background="#003366" 
                                                                        CornerRadius="6" 
                                                                        Padding="10,6"
                                                                        Margin="0,0,12,0">
                                                                    <TextBlock Text="{Binding CodigoLocal}" 
                                                                               FontSize="15" FontWeight="Bold" 
                                                                               Foreground="White"/>
                                                                </Border>

                                                                <Button Grid.Column="2"
                                                                        Background="{Binding Activo, Converter={StaticResource EstadoActivoColorConverter}}"
                                                                        Foreground="White"
                                                                        FontWeight="Bold"
                                                                        FontSize="12"
                                                                        Padding="12,6"
                                                                        BorderThickness="0"
                                                                        CornerRadius="6"
                                                                        Cursor="Hand"
                                                                        Margin="0,0,8,0"
                                                                        Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).CambiarEstadoLocalCommand}"
                                                                        CommandParameter="{Binding}">
                                                                    <TextBlock Text="{Binding Activo, Converter={StaticResource EstadoTextoMayusculaConverter}}" FontSize="12" FontWeight="Bold"/>
                                                                </Button>

                                                                <Button Grid.Column="3"
                                                                        Classes="btn-danger"
                                                                        Padding="12,6"
                                                                        Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).QuitarLocalCommand}"
                                                                        CommandParameter="{Binding}">
                                                                    <TextBlock Text="ELIMINAR LOCAL" FontSize="13" FontWeight="Bold"/>
                                                                </Button>
                                                            </Grid>

                                                            <!-- País y Código Postal -->
                                                            <Grid ColumnDefinitions="*,*">
                                                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                                    <TextBlock Text="País *" 
                                                                               FontSize="14" FontWeight="SemiBold" 
                                                                               Margin="0,0,0,6"/>
                                                                    <TextBox Text="{Binding Pais}" 
                                                                             Watermark="España"
                                                                             FontSize="16"/>
                                                                </StackPanel>
                                                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                                    <TextBlock Text="Código Postal *" 
                                                                               FontSize="14" FontWeight="SemiBold" 
                                                                               Margin="0,0,0,6"/>
                                                                    <TextBox Text="{Binding CodigoPostal}" 
                                                                             Watermark="28001"
                                                                             FontSize="16"/>
                                                                </StackPanel>
                                                            </Grid>

                                                            <!-- Tipo de vía -->
                                                            <StackPanel>
                                                                <TextBlock Text="Tipo de vía *" 
                                                                           FontSize="14" FontWeight="SemiBold" 
                                                                           Margin="0,0,0,6"/>
                                                                <TextBox Text="{Binding TipoVia}" 
                                                                         Watermark="Calle, Avenida, Plaza..."
                                                                         FontSize="16"/>
                                                            </StackPanel>

                                                            <!-- Calle -->
                                                            <StackPanel>
                                                                <TextBlock Text="Calle *" 
                                                                           FontSize="14" FontWeight="SemiBold" 
                                                                           Margin="0,0,0,6"/>
                                                                <TextBox Text="{Binding Direccion}" 
                                                                         Watermark="Gran Vía"
                                                                         FontSize="16"/>
                                                            </StackPanel>

                                                            <!-- Número, Escalera y Piso -->
                                                            <Grid ColumnDefinitions="*,*,*">
                                                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                                    <TextBlock Text="Número *" 
                                                                               FontSize="14" FontWeight="SemiBold" 
                                                                               Margin="0,0,0,6"/>
                                                                    <TextBox Text="{Binding LocalNumero}" 
                                                                             Watermark="123"
                                                                             FontSize="16"/>
                                                                </StackPanel>
                                                                <StackPanel Grid.Column="1" Margin="4,0,4,0">
                                                                    <TextBlock Text="Escalera" 
                                                                               FontSize="14" FontWeight="SemiBold" 
                                                                               Margin="0,0,0,6"/>
                                                                    <TextBox Text="{Binding Escalera}" 
                                                                             Watermark="A"
                                                                             FontSize="16"/>
                                                                </StackPanel>
                                                                <StackPanel Grid.Column="2" Margin="8,0,0,0">
                                                                    <TextBlock Text="Piso" 
                                                                               FontSize="14" FontWeight="SemiBold" 
                                                                               Margin="0,0,0,6"/>
                                                                    <TextBox Text="{Binding Piso}" 
                                                                             Watermark="3º"
                                                                             FontSize="16"/>
                                                                </StackPanel>
                                                            </Grid>

                                                            <!-- Teléfono y Email -->
                                                            <Grid ColumnDefinitions="*,*">
                                                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                                    <TextBlock Text="Teléfono" 
                                                                               FontSize="14" FontWeight="SemiBold" 
                                                                               Margin="0,0,0,6"/>
                                                                    <TextBox Text="{Binding Telefono}" 
                                                                             Watermark="+34 XXX XXX XXX"
                                                                             FontSize="16"/>
                                                                </StackPanel>
                                                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                                    <TextBlock Text="Email" 
                                                                               FontSize="14" FontWeight="SemiBold" 
                                                                               Margin="0,0,0,6"/>
                                                                    <TextBox Text="{Binding Email}" 
                                                                             Watermark="local@empresa.com"
                                                                             FontSize="16"/>
                                                                </StackPanel>
                                                            </Grid>

                                                            <!-- Módulos / Permisos -->
                                                            <StackPanel Spacing="12">
                                                                <TextBlock Text="MÓDULOS HABILITADOS" 
                                                                           FontSize="15" FontWeight="Bold" 
                                                                           Foreground="#0b5394"
                                                                           LetterSpacing="0.5"/>
                                                                
                                                                <CheckBox IsChecked="{Binding ModuloDivisas}">
                                                                    <TextBlock Text="Módulo de Compra de Divisas" FontSize="15"/>
                                                                </CheckBox>

                                                                <CheckBox IsChecked="{Binding ModuloPackAlimentos}">
                                                                    <TextBlock Text="Módulo de Packs de Alimentos" FontSize="15"/>
                                                                </CheckBox>

                                                                <CheckBox IsChecked="{Binding ModuloBilletesAvion}">
                                                                    <TextBlock Text="Módulo de Billetes de Avión" FontSize="15"/>
                                                                </CheckBox>

                                                                <CheckBox IsChecked="{Binding ModuloPackViajes}">
                                                                    <TextBlock Text="Módulo de Packs de Viajes" FontSize="15"/>
                                                                </CheckBox>
                                                            </StackPanel>

                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Mensaje cuando no hay locales -->
                                        <Border IsVisible="{Binding !LocalesComercio.Count}"
                                                Background="White"
                                                BorderThickness="1" BorderBrush="#0b5394"
                                                CornerRadius="8"
                                                Padding="32">
                                            <TextBlock Text="Haz clic en AÑADIR LOCAL para agregar el primer local"
                                                       FontSize="16"
                                                       Foreground="#0b5394"
                                                       FontStyle="Italic"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                </Border>

                                <!-- ARCHIVOS -->
                                <Border Background="#fff3cd" 
                                        CornerRadius="10" 
                                        Padding="24">
                                    <StackPanel Spacing="16">
                                        <TextBlock Text="ARCHIVOS ADJUNTOS" 
                                                   FontSize="18" FontWeight="Bold" 
                                                   Foreground="#856404"
                                                   LetterSpacing="0.5"/>

                                        <Button Classes="btn-secondary"
                                                Command="{Binding SeleccionarArchivosCommand}">
                                            <TextBlock Text="SELECCIONAR ARCHIVOS" FontSize="14" FontWeight="Bold"/>
                                        </Button>

                                        <!-- Lista de archivos para subir -->
                                        <ItemsControl ItemsSource="{Binding ArchivosParaSubir}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="White" 
                                                            BorderBrush="#ffc107" BorderThickness="1"
                                                            CornerRadius="6" 
                                                            Padding="12" 
                                                            Margin="0,0,0,8">
                                                        <Grid ColumnDefinitions="*,Auto">
                                                            <TextBlock Grid.Column="0" Text="{Binding}" FontSize="16" VerticalAlignment="Center"/>
                                                            <Button Grid.Column="1" 
                                                                    Background="Transparent" 
                                                                    BorderThickness="0"
                                                                    Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).QuitarArchivoCommand}"
                                                                    CommandParameter="{Binding}">
                                                                <TextBlock Text="✕" FontSize="20" Foreground="#dc3545"/>
                                                            </Button>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <TextBlock IsVisible="{Binding !ArchivosParaSubir.Count}"
                                                   Text="No hay archivos seleccionados"
                                                   FontSize="15"
                                                   Foreground="#856404"
                                                   FontStyle="Italic"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer con botones -->
                    <Border Grid.Row="2" 
                            Background="#f8f9fa"
                            BorderThickness="0,1,0,0"
                            BorderBrush="#dee2e6"
                            Padding="24,20"
                            IsVisible="{Binding MostrarFormulario}">
                        <Grid ColumnDefinitions="*,Auto,Auto">
                            <Button Grid.Column="1"
                                    Classes="btn-secondary"
                                    Command="{Binding CancelarFormularioCommand}"
                                    Margin="0,0,12,0">
                                <TextBlock Text="CANCELAR" FontSize="15" FontWeight="Bold"/>
                            </Button>
                            <Button Grid.Column="2"
                                    Classes="btn-primary"
                                    Command="{Binding GuardarComercioCommand}">
                                <TextBlock Text="{Binding TituloBotonGuardar}" 
                                           FontSize="15" FontWeight="Bold"/>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- ============================================ -->
        <!-- OVERLAY DE CARGA CENTRADO EN PANTALLA COMPLETA -->
        <!-- ============================================ -->
        <Border Grid.Row="0" Grid.RowSpan="2"
                IsVisible="{Binding Cargando}"
                Background="#80000000"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ZIndex="1000">
            <Border Background="White"
                    CornerRadius="12"
                    Padding="50,40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 24 0 #40000000">
                <StackPanel Spacing="24" 
                            HorizontalAlignment="Center">
                    <TextBlock Text="Procesando..."
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#003366"
                               HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Por favor espere..."
                               FontSize="17"
                               Foreground="#666"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>

        <!-- ============================================ -->
        <!-- MENSAJE DE ÉXITO CENTRADO EN PANTALLA COMPLETA -->
        <!-- ============================================ -->
        <Border Grid.Row="0" Grid.RowSpan="2"
                IsVisible="{Binding MostrarMensajeExito}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                ZIndex="1000">
            <Border Background="#28a745"
                    CornerRadius="10"
                    Padding="32,20"
                    BoxShadow="0 4 12 0 #40000000">
                <TextBlock Text="{Binding MensajeExito}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="White"/>
            </Border>
        </Border>
    </Grid>

</UserControl>
